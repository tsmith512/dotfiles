[user]
  name = Taylor Smith
  email = tsmith@tsmithcreative.com

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = green
  changed = yellow
  untracked = red

[alias]
  st = status
  cm = commit
  br = branch
  co = checkout
  df = diff
  dc = diff --cached
  ds = diff --staged
  dn = diff --numstat
  dns = diff --staged --numstat
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  lg = log -p
  ls = ls-files
  rhh = reset --hard HEAD

  # Show files ignored by git:
  ign = clean -dXn

[core]
  editor = emacs
